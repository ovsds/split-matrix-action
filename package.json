{
  "private": true,
  "name": "split-matrix-action",
  "main": "lib/main.js",
  "dependencies": {
    "@actions/core": "2.0.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^9.0.0",
    "vitest": "^4.0.0",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "husky": "^9.0.0",
    "lint-staged": "^16.0.0",
    "prettier": "^3.0.0"
  },
  "hooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --check",
      "eslint"
    ],
    "*.{md,yaml,json,js}": [
      "prettier --check"
    ]
  },
  "scripts": {
    "lint:check": "npm run lint:check:prettier && npm run lint:check:eslint",
    "lint:check:eslint": "eslint .",
    "lint:check:prettier": "prettier --check .",
    "lint:fix": "npm run lint:fix:prettier && npm run lint:fix:eslint",
    "lint:fix:eslint": "eslint . --fix",
    "lint:fix:prettier": "prettier --write .",
    "test": "vitest",
    "test:unit": "vitest tests/unit",
    "test:integration": "vitest tests/integration",
    "build": "tsc",
    "package": "rm -rf ./lib ./dist && npm run build && ncc build",
    "prepare": "husky"
  }
}
